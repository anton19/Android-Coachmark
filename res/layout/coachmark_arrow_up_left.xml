<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/arrow_left_coachmark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/flight_search_header"
    android:background="@android:color/transparent" >

   <ImageView
        android:id="@+id/arrow_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:src="@drawable/cm_arrow_bent_up_left" />

    <TextView
        android:id="@+id/arrow_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arrow_left_image"
        android:padding="3dp"
        android:text="Button 1"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>